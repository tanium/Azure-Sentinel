{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "logicAppName": {
            "type": "string",
            "defaultValue": "CrowdSec-CTI-Playbook-Prod",
            "metadata": { "description": "The name for the Logic App Playbook." }
        },
        "sentinelConnectionName": {
            "type": "string",
            "defaultValue": "CrowdSec-Playbook-Sentinel-API-Connection",
            "metadata": { "description": "Name for the Azure Sentinel API connection resource." }
        },
        "sentinelWorkspaceName": {
            "type": "string",
            "defaultValue": "REPLACE_WITH_SENTINEL_WORKSPACE_NAME",
            "metadata": { "description": "The name of the Sentinel/Log Analytics workspace. MUST be updated for deployment." }
        },
        "crowdSecApiKey": {
            "type": "securestring",
            "defaultValue": "REPLACE_ME_WITH_YOUR_SECRET_CROWDSEC_API_KEY",
            "metadata": { "description": "The API key required to authenticate with the CrowdSec CTI API. MUST be provided during deployment." }
        },
        "initialDelayInSeconds": {
            "type": "int",
            "defaultValue": 120,
            "metadata": { "description": "Initial delay in seconds before processing the alert to allow data to propagate." }
        }
    },
    "variables": {
        "sentinelManagedApiId": "[concat(subscription().id, '/providers/Microsoft.Web/locations/', resourceGroup().location, '/managedApis/azuresentinel')]"
    },
    "resources": [
        {
            "type": "Microsoft.Web/connections",
            "apiVersion": "2018-07-01-preview",
            "name": "[parameters('sentinelConnectionName')]",
            "location": "[resourceGroup().location]",
            "properties": {
                
                "api": {
                    "id": "[variables('sentinelManagedApiId')]"
                },
                "displayName": "Azure Sentinel Connection",
                "nonSecretParameterValues": {}
            }
        },
        {
            "type": "Microsoft.Logic/workflows",
            "apiVersion": "2018-07-01-preview", 
            "name": "[parameters('logicAppName')]",
            "location": "[resourceGroup().location]",
            "dependsOn": [
                
                "[resourceId('Microsoft.Web/connections', parameters('sentinelConnectionName'))]"
            ],
            "identity": {
                "type": "SystemAssigned"
            },
            "properties": {
                
                "definition": {
                    "$schema": "https://schema.management.azure.com/providers/Microsoft.Logic/schemas/2016-06-01/workflowdefinition.json#",
                    "contentVersion": "1.0.0.0",
                    "triggers": {
                        "Microsoft_Sentinel_alert": {
                            "type": "ApiConnectionWebhook",
                            "inputs": {
                                "host": {
                                    "connection": {
                                        
                                        "name": "@parameters('$connections')['azuresentinel']['connectionId']"
                                    }
                                },
                                "body": {
                                    "callback_url": "@{listCallbackUrl()}"
                                },
                                "path": "/subscribe"
                            },
                            "conditions": []
                        }
                    },
                    "actions": {
                        "Entities_-_Get_IPs": {
                            "type": "ApiConnection",
                            "inputs": {
                                "host": {
                                    "connection": {
                                        "name": "@parameters('$connections')['azuresentinel']['connectionId']"
                                    }
                                },
                                "method": "post",
                                "body": "@triggerBody()?['Entities']",
                                "path": "/entities/ip"
                            },
                            "runAfter": {
                                "Entities_-_Get_Accounts": [
                                    "Succeeded"
                                ]
                            }
                        },
                        "For_each_IPs": {
                            "type": "Foreach",
                            "foreach": "@body('Entities_-_Get_IPs')?['IPs']",
                            "actions": {
                                "HTTP": {
                                    "type": "Http",
                                    "inputs": {
                                        "uri": "https://cti.api.crowdsec.net/v2/smoke/@{items('For_each_IPs')?['Address']}",
                                        "method": "GET",
                                        "headers": {
                                            
                                            "x-api-key": "@{parameters('CrowdSec API Key')}"
                                        }
                                    },
                                    "runtimeConfiguration": {
                                        "contentTransfer": {
                                            "transferMode": "Chunked"
                                        }
                                    }
                                },
                                "HTTP_Request_successful": {
                                    "type": "If",
                                    "expression": {
                                        "and": [
                                            {
                                                "equals": [
                                                    "@outputs('HTTP')?['statusCode']",
                                                    200
                                                ]
                                            }
                                        ]
                                    },
                                    "actions": {
                                        "Parse_JSON": {
                                            "type": "ParseJson",
                                            "inputs": {
                                                "content": "@body('HTTP')",
                                                "schema": {
                                                    "type": "object",
                                                    "properties": {
                                                        "ip": { "type": "string" },
                                                        "reputation": { "type": "string" },
                                                        "classifications": {
                                                            "type": "object",
                                                            "properties": {
                                                                "classifications": {
                                                                    "type": "array",
                                                                    "items": {
                                                                        "type": "object",
                                                                        "properties": {
                                                                            "name": { "type": "string" },
                                                                            "label": { "type": "string" }
                                                                        }
                                                                    }
                                                                }
                                                            }
                                                        }
                                                    },
                                                    "additionalProperties": true
                                                }
                                            }
                                        },
                                        "JSON_Is_valid": {
                                            "type": "If",
                                            "expression": {
                                                "or": [
                                                    { "equals": ["@body('Parse_JSON')?['reputation']", "malicious"] },
                                                    { "equals": ["@body('Parse_JSON')?['reputation']", "suspicious"] }
                                                ]
                                            },
                                            "actions": {
                                                "For_each_users": {
                                                    "type": "Foreach",
                                                    "foreach": "@body('Entities_-_Get_Accounts')?['Accounts']",
                                                    "actions": {
                                                        "Create_incident": {
                                                            "type": "ApiConnection",
                                                            "inputs": {
                                                                "host": {
                                                                    "connection": {
                                                                        "name": "@parameters('$connections')['azuresentinel']['connectionId']"
                                                                    }
                                                                },
                                                                "method": "put",
                                                                "body": {
                                                                    "title": "Suspicious Login For @{items('For_each_users')?['Name']} From @{body('Parse_JSON')?['ip']}",
                                                                    "severity": "Medium",
                                                                    "status": "New",
                                                                    "description": "Suspicious IP, reason: @{join(variables('classifications'), ',')}",
                                                                    "tagsToAdd": {
                                                                        "TagsToAdd": "@triggerBody()?['ExtendedLinks']"
                                                                    }
                                                                },
                                                                "path": "[concat('/Incidents/subscriptions/', subscription().subscriptionId, '/resourceGroups/',  resourceGroup().name, '/workspaces/', parameters('sentinelWorkspaceName'))]"
                                                            },
                             
                                                            "runAfter": {}
                                                        },
                                                        "Add_alert_to_incident": {
                                                            "type": "ApiConnection",
                                                            "inputs": {
                                                                "host": {
                                                                    "connection": {
                                                                        "name": "@parameters('$connections')['azuresentinel']['connectionId']"
                                                                    }
                                                                },
                                                                "method": "post",
                                                                "body": {
                                                                    "incidentArmId": "@body('Create_incident')?['id']",
                                                                    "relatedResourceId": "@triggerBody()?['SystemAlertId']"
                                                                },
                                                                "path": "/Incidents/Relation/Create"
                                                            },
                                                            "runAfter": {
                                                                "Add_CTI_link_to_incident_as_comment": [ "Succeeded" ]
                                                            }
                                                        },
                                                        "Add_CTI_link_to_incident_as_comment": {
                                                            "type": "ApiConnection",
                                                            "inputs": {
                                                                "host": {
                                                                    "connection": {
                                                                        "name": "@parameters('$connections')['azuresentinel']['connectionId']"
                                                                    }
                                                                },
                                                                "method": "post",
                                                                "body": {
                                                                    "incidentArmId": "@body('Create_incident')?['id']",
                                                                    "message": "<p class=\"editor-paragraph\">Crowdsec CTI URL: https://app.crowdsec.net/cti/@{body('Parse_JSON')?['ip']}</p><br><p class=\"editor-paragraph\">Debug classifs: @{variables('classifications')}</p><br><p class=\"editor-paragraph\">Extended links: @{triggerBody()?['ExtendedLinks']}</p>"
                                                                },
                                                                "path": "/Incidents/Comment"
                                                            },
                                                            "runAfter": {
                                                                "Create_incident": [ "Succeeded" ]
                                                            }
                                                        }
                                                    },
                                                    "runAfter": {
                                                        "For_each_classification_in_classifications": [ "Succeeded" ]
                                                    }
                                                },
                                                "For_each_classification_in_classifications": {
                                                    "type": "Foreach",
                                                    "foreach": "@body('Parse_JSON')?['classifications']?['classifications']",
                                                    "actions": {
                                                        "Append_to_array_variable": {
                                                            "type": "AppendToArrayVariable",
                                                            "inputs": {
                                                                "name": "classifications",
                                                                "value": "@item()?['label']"
                                                            }
                                                        }
                                                    }
                                                },
                                                "Set_variable": {
                                                    "type": "SetVariable",
                                                    "inputs": {
                                                        "name": "classifications",
                                                        "value": []
                                                    },
                                                    "runAfter": {
                                                        "For_each_users": [ "Succeeded" ]
                                                    }
                                                }
                                            },
                                            "else": { "actions": {} },
                                            "runAfter": { "Parse_JSON": [ "Succeeded" ] }
                                        }
                                    },
                                    "else": { "actions": {} },
                                    "runAfter": { "HTTP": [ "Succeeded", "Failed", "TimedOut" ] }
                                }
                            },
                            "runAfter": { "Entities_-_Get_IPs": [ "Succeeded" ] }
                        },
                        "Entities_-_Get_Accounts": {
                            "type": "ApiConnection",
                            "inputs": {
                                "host": {
                                    "connection": {
                                        "name": "@parameters('$connections')['azuresentinel']['connectionId']"
                                    }
                                },
                                "method": "post",
                                "body": "@triggerBody()?['Entities']",
                                "path": "/entities/account"
                            },
                            "runAfter": { "Delay": [ "Succeeded" ] }
                        },
                        "Initialize_variables": {
                            "type": "InitializeVariable",
                            "inputs": {
                                "variables": [
                                    { "name": "classifications", "type": "array" }
                                ]
                            },
                            "runAfter": {}
                        },
                        "Delay": {
                            "type": "Wait",
                            "inputs": {
                                "interval": {
                                    
                                    "count": "@{parameters('initialDelayInSeconds')}",
                                    "unit": "Second"
                                }
                            },
                            "runAfter": { "Initialize_variables": [ "Succeeded" ] }
                        }
                    },
                    "outputs": {},
                    "parameters": {
                        "CrowdSec API Key": {
                            "defaultValue": "N/A",
                            "type": "SecureString"
                        },
                        "initialDelayInSeconds": {
                            "defaultValue": 120,
                            "type": "int"
                        },
                        "$connections": {
                            "type": "Object",
                            "defaultValue": {
                                
                                "azuresentinel": {

                                    "connectionId": "[resourceId('Microsoft.Web/connections', parameters('sentinelConnectionName'))]",
                                    "connectionName": "[parameters('sentinelConnectionName')]",
                                    "id": "[concat('/subscriptions/', subscription().subscriptionId, '/providers/Microsoft.Web/locations/', resourceGroup().location, '/managedApis/azuresentinel')]"
                                }
                            }
                        }
                    }
                },
                
                "parameters": {
                    "initialDelayInSeconds": {
                        "value": "[parameters('initialDelayInSeconds')]"
                    },
                    "CrowdSec API Key": {
                        "value": "[parameters('crowdSecApiKey')]"
                    },
                    "$connections": {
                        "value": {
                            "azuresentinel": {
                                "connectionId": "[resourceId('Microsoft.Web/connections', parameters('sentinelConnectionName'))]",
                                "connectionName": "[parameters('sentinelConnectionName')]",
                                "id": "[variables('sentinelManagedApiId')]"
                            }
                        }
                    }
                }
            }
        }
    ]
}